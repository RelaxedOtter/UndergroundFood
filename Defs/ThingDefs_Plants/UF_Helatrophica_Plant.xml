<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="PlantBase">
    <defName>UF_Helatrophica</defName>
    <label>Helatrophica</label>
    <description>The long lifespan of this light-producing xenofungus makes it an ideal light source for those that can ignore the stench. It is oddly delicate and cannot be planted directly in the ground.</description>
    <statBases>
      <MaxHitPoints>85</MaxHitPoints>
      <Beauty>-15</Beauty>
      <Nutrition>0</Nutrition>
    </statBases>
    <graphicData>
      <texPath>Plants/Helatrophica/UF_helatrophica</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <altitudeLayer>Item</altitudeLayer>
    <selectable>true</selectable>
    <ingestible>
        <preferability>NeverForNutrition</preferability>
    </ingestible>
    <plant>
		<dieIfLeafless>true</dieIfLeafless>
		<harvestTag>Standard</harvestTag> 
		<sowWork>1200</sowWork>
		<sowTags>
			<li>Decorative</li>
			<li>Hydroponic</li>
		</sowTags>
		<growMinGlow>0.3</growMinGlow>
		<topWindExposure>1.0</topWindExposure>
		<growDays>1</growDays>
		<lifespanDaysPerGrowDays>35</lifespanDaysPerGrowDays>
		<visualSizeRange>0.3~1.0</visualSizeRange>
		<wildOrder>1</wildOrder>
		<purpose>Beauty</purpose>
		<sowResearchPrerequisites>
				<li>UF_XenofungusCultivation</li>
		</sowResearchPrerequisites>
    </plant>
	<canOverlapZones>false</canOverlapZones>
    <comps>
		<li Class="CompProperties_Glower">
			<glowRadius>9</glowRadius>
			<glowColor>(230, 230, 90)</glowColor>
		</li>
	</comps>
  </ThingDef>
</Defs>